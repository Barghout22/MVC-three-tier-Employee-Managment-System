@model GetDepartmntVm
@if (ViewBag.error != null)
{
    <p class="alert alert-danger">@ViewBag.error</p>
}
<form asp-action="Delete" asp-controller="Department">
    <input hidden asp-for="Id" id="Id" />
    <div class="card w-75 mx-auto">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@SharedLocalizer["Id"] : @Model.Id</li>
            <li class="list-group-item">@SharedLocalizer["Area"]: @Model.Area</li>
        </ul>

        <div class=" card w-75 mx-auto">
            <p class="alert alert-danger">are you sure you want to delete this department?</p>
        </div>
        <div class="card-body d-flex">
            <button type="submit" class="btn btn-outline-danger w-50">@SharedLocalizer["Confirm"]</button>
            <a asp-action="Index" asp-controller="Department" class="btn btn-dark w-50">@SharedLocalizer["Cancel"]</a>
        </div>


    </div>
</form>