@model GetEmployeeVm
@if (ViewBag.error != null)
{
    <p class="alert alert-danger">@ViewBag.error</p>
}
<form asp-action="Delete" asp-controller="Employee">
<input hidden asp-for="Id" id="Id" />
<div class="card w-75 mx-auto">
    <img src="~/Files/@Model.Image" class="card-img-top w-50 mx-auto rounded-circle" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">Employee Id : @Model.Id</li>
        <li class="list-group-item">Salary: @Model.Salary</li>
    </ul>

    <div class=" card w-75 mx-auto">
        <p class="alert alert-danger">are you sure you want to delete this employee?</p>
    </div>
        <div class="card-body d-flex">
            <button type="submit" class="btn btn-outline-danger w-50">@SharedLocalizer["Confirm"]</button>
            <a asp-action="Index" asp-controller="Employee" class="btn btn-dark w-50">@SharedLocalizer["Cancel"]</a>
        </div>
    

</div>
</form>

